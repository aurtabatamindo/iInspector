<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.iinspector">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.IInspector"
        tools:replace="android:icon,android:theme">
        <activity
            android:name=".Training"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Toolbox"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Induction"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".IsiTugas"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.main.DoneDetail"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".InspeksiKetiga"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".test"
            android:screenOrientation="portrait">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".Login"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:resizeableActivity="true"
            android:theme="@style/Theme.IInspector.NoActionBar"
            tools:targetApi="24"
            android:screenOrientation="portrait"/>

        <activity android:name=".InspeksiHasil"
            android:screenOrientation="portrait"/>
        <activity android:name=".InspeksiSelesai"
            android:screenOrientation="portrait"/>
        <activity android:name=".InspeksiKedua"
            android:screenOrientation="portrait"/>
        <activity android:name=".InspeksiAwal"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Side"
            android:label="@string/title_activity_side"
            android:theme="@style/Theme.IInspector.NoActionBar"
            android:screenOrientation="portrait"
            />
        <activity android:name=".Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".SendNotificationPack.MyFireBaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".SendNotificationPack.MyFirebaseIdService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".AddressService" />
    </application>

</manifest>