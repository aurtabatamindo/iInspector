<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_gravity="center"
    android:elevation="5dp"
    android:background="@drawable/cardview">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:text="Judul Inspeksi"
        android:textSize="20dp"
        android:textColor="@color/text_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/team_icon" />

    <TextView
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:text="Team ?"
        android:textColor="@color/text_dark" />

    <TextView
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:text="Team ?"
        android:visibility="invisible"
        android:textColor="@color/text_dark" />

    <TextView
        android:id="@+id/devisi"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="   Group   "
        android:textColor="@color/white"
        android:background="@drawable/labelhijau" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/lokasi_icon" />

    <TextView
        android:id="@+id/lokasi"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="65dp"
        android:text="Lokasi inspeksi detail"
        android:textColor="@color/text_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="130dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/tanggal_icon" />

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="42dp"
        android:text="DD/MM/YYYY "
        android:textColor="@color/text_dark" />


</FrameLayout>